<div class="container">
  <div class="row">
      <div class="section-title">
        <h3>My bookings</h3>
      </div>
        <div class="request-tabs">
          <ul class="nav nav-tabs">
            <% count =  @bookings.where(validated: true).count %>
            <li class="nav-button active"><a data-toggle="tab" href="#current" class="nav-button"><%= "Active (#{count})"  %></a></li>
            <li><a data-toggle="tab" href="#menu4" class="nav-button">Pending</a></li>
          </ul>
        </div>
        <div class="tab-content">
          <div id="current" class="tab-pane fade in active">
            <% bookings =  @bookings.where(validated: true).order(:created_at, :id) %>
            <%= render "bookings", bookings: bookings  %>
          </div>
          <div id="menu4" class="tab-pane fade">
            <% bookings =  @bookings.where(validated: nil) %>
            <%= render "bookings", bookings: bookings  %>
          </div>
        </div>
  </div>

  <div class="row">
      <div class="section-title">
        <h3>My requests</h3>
      </div>
        <% count = @requests.where(validated: nil).count %>
        <div class="request-tabs">
          <ul class="nav nav-tabs">
            <li class="nav-button active"><a data-toggle="tab" href="#home" class="nav-button"><%= "Pending (#{count})"  %></a></li>
            <li><a data-toggle="tab" href="#menu1" class="nav-button">All</a></li>
            <li><a data-toggle="tab" href="#menu2" class="nav-button">Accepted</a></li>
            <li><a data-toggle="tab" href="#menu3" class="nav-button">Declined</a></li>
          </ul>
        </div>
        <div class="tab-content">
          <div id="home" class="tab-pane fade in active">
            <% requests =  @requests.where(validated: nil) %>
            <%= render "requests", requests: requests  %>
          </div>
          <div id="menu1" class="tab-pane fade">
            <% requests =  @requests.order(:created_at, :id) %>
            <%= render "requests", requests: requests  %>
          </div>
          <div id="menu2" class="tab-pane fade">
            <% requests =  @requests.where(validated: true).order(:created_at, :id) %>
            <%= render "requests", requests: requests  %>
          </div>
          <div id="menu3" class="tab-pane fade">
            <% requests =  @requests.where(validated: false).order(:created_at, :id) %>
            <%= render "requests", requests: requests  %>
          </div>
        </div>
  </div>
  <div class="row">
    <div class="section-title"><h3>My ideas</h3></div>
    <div class="ideas">
      <% @ideas.each do |idea| %>
        <div class="col-xs-6 col-sm-4 col-md-3 idea">
          <%= render 'shared/card-new', idea: idea  %>
        </div>
      <% end %>
    </div>
  </div>

</div>






