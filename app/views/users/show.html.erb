<div class="container">
  <div class="row">
    <div class="section-title"><h3>Ideas</h3></div>
    <% @ideas.each do |idea| %>
    <div class="col-xs-12 col-sm-4 ideas">
      <%= render 'shared/card-new', idea: idea  %>
    </div>
  <% end %>

  <div class="row">

      <div class="section-title">
        <h3>Booking requests</h3>
      </div>
      <% count =  @bookings.where(validated: nil).count %>
      <div class="requests-container">
        <div class="request-tabs">
          <ul class="nav nav-tabs">
            <li class="nav-button active"><a data-toggle="tab" href="#home" class="nav-button"><%= "Pending (#{count})"  %></a></li>
            <li><a data-toggle="tab" href="#menu1" class="nav-button">All</a></li>
            <li><a data-toggle="tab" href="#menu2" class="nav-button">Accepted</a></li>
            <li><a data-toggle="tab" href="#menu3" class="nav-button">Declined</a></li>
          </ul>
        </div>
        <div class="tab-content">
          <div id="home" class="tab-pane fade in active">
            <% bookings =  @bookings.where(validated: nil) %>
            <%= render "bookings", bookings: bookings  %>
          </div>
          <div id="menu1" class="tab-pane fade">
            <% bookings =  @bookings.order(:created_at, :id) %>
            <%= render "bookings", bookings: bookings  %>
          </div>
          <div id="menu2" class="tab-pane fade">
            <% bookings =  @bookings.where(validated: true).order(:created_at, :id) %>
            <%= render "bookings", bookings: bookings  %>
          </div>
          <div id="menu3" class="tab-pane fade">
            <% bookings =  @bookings.where(validated: false).order(:created_at, :id) %>
            <%= render "bookings", bookings: bookings  %>
          </div>
        </div>
      </div>

  </div>


  <div class="row">
    <div class="section-title"><h3>Bookings</h3></div>
    <div class="col-xs-12 col-sm-4 bookings">
      <% @bookings.each do |booking|%>
        <p>
          <%= booking.idea.title %>
        </p>
      <% end %>

    </div>
  </div>
</div>







