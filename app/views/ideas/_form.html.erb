<div class="container">
  <div class="main-form">
    <%= simple_form_for @idea, :html => { :class => 'form-horizontal' } do |f| %>

      <%- if f.error_notification %>
        <div class="alert alert-error fade in">
          <a class="close" data-dismiss="alert" href="#">&times;</a>
          <%= f.error_notification %>
        </div>
      <%- end %>

      <div class="form-inputs">
        <div class="form-input-inline">
          <div class="form-component"> <%= f.input :title, label: "Idea title"%></div>
          <div> <%= f.input :category%></div>
        </div>
        <%= f.input :description, label: "How will this idea change the world?" %>
        <div class="form-input-inline">
        <div class="form-component"> <%= f.input :pricing, label: "Set a price per day" %></div>
        <%= f.input :minimum_duration, label: "What is the min duration?" %>
        </div>
        <%= f.input :application_criteria, label: "Application_criteria" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden,label: "" %>

        <%= f.submit "add an Idea", class: "btn btn-primary btn-form" %>
      </div>
    <% end %>
  </div>
</div>
