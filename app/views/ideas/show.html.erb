<div class="container">
  <div class="idea text-center">
    <div class="main">
      <div class="main-content">
        <%= cl_image_tag @idea.photo, height: 180, width: 180, crop: :fill %>
        <h2><%= @idea.title %></h2>
        <p><%= @idea.category %></p>
        <p><%= @idea.user.first_name %> <%= @idea.user.last_name %></p>
        <%= link_to "Book", new_idea_booking_path(@idea), class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <div class="stat">
      <div class="stat-content">
        <p>Price per day</p>
        <p><%= @idea.pricing %> €</p>
      </div>
    </div>
    <div class="stat">
      <div class="stat-content">
        <p>Min. duration</p>
        <p><%= @idea.minimum_duration %> days</p>
      </div>
      </div>
    <div class="stat">
      <div class="stat-content">
        <p>MAP</p>
      </div>
      </div>
    <div class="description">
      <div class="description-content text-left">
        <h3>More about the idea</h3>
        <p class="text-left">
          <%= @idea.description %>exitgst
        <h3>Application Criteria</h3>
        <p class="text-left">
          <%= @idea.application_criteria %>
        </p>
      </div>
    </div>
    <div class="reviews">
      <h3>Previous reviews</h3>
      <ul class="list-unstyled">
        <% @idea.reviews.each do |r| %>
          <li> <%= '*' * r.rating %> | <%= r.comment %> </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

